package com.furnitureapp.entity;

import java.util.Locale;

public abstract class CustomerSupportAgent Employee {

    public CustomerSupportAgent(CustomerSupportAgent builder) {
        super(builder);
    }

    @Override
    public String toString (){
        return super.toString();
    }

    public static class CustomerSupportAgentBuilder extends EmployeeBuilder{
        public CustomerSupportAgentBuilder(){ }

        public CustomerSupportAgentBuilder copy(CustomerSupportAgent CusSupport){
            super.setEmployeeCode(CusSupport.getEmployee());
            super.setFullName(CusSupport.getFullName());
            super.setAddress(CusSupport.getAddress());
            super.setEmailAddress(CusSupport.getEmailAddress());
            super.setPhone(CusSupport.getPhone());
            super.setJob(CusSupport.getJob());
            super.setPassCode(CusSupport.getPassCode());
            return this;

        }

        public CustomerSupportAgent build(){
            return new CustomerSupportAgent(this);
        }
    }

}
